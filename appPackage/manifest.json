{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.whereat.teamsmap",
  "developer": {
    "name": "WhereAt Team",
    "websiteUrl": "https://whereat.app",
    "privacyUrl": "https://whereat.app/privacy",
    "termsOfUseUrl": "https://whereat.app/terms"
  },
  "name": {
    "short": "Team Geo-Map & Insights",
    "full": "Team Geo-Map & Insights - Visualize Your Team's Global Distribution"
  },
  "description": {
    "short": "Visualize your team's geographical distribution on an interactive map",
    "full": "Team Geo-Map & Insights helps you visualize where your team members are located around the world. See your management chain, direct reports, and colleagues on an interactive map. Ask questions about your team using the AI-powered chat assistant."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#5B5FC7",
  "staticTabs": [
    {
      "entityId": "team-geo-map",
      "name": "Team Geo-Map",
      "contentUrl": "https://{baseUrl}/tab",
      "scopes": ["personal"]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://{baseUrl}/config",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupchat"]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "*.ngrok.io",
    "*.ngrok-free.app",
    "localhost"
  ],
  "webApplicationInfo": {
    "id": "{{AAD_APP_CLIENT_ID}}",
    "resource": "api://{{baseUrl}}/{{AAD_APP_CLIENT_ID}}"
  }
}
